{
    "name": "Scanly - Quick A11y Testing",
    "author": "Accessibility Insights Team",
    "description": "Streamlined accessibility testing extension focused on automated checks and AI-optimized reporting.",
    "version": "1.0.0",
    "icons": {
        "16": "icons/brand/blue/brand-blue-16px.png",
        "48": "icons/brand/blue/brand-blue-48px.png",
        "128": "icons/brand/blue/brand-blue-128px.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "manifest_version": 3,
    "permissions": ["scripting", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content/*",
                "scanner/*"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}